<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#181818"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rer_rsrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/res_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/rer_rsrp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/res_rsrq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/res_rssi"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/res_snr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/res_rsrq"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>